{
    "manifest_version": 3,
    "name": "DontBite - Phishing Detector",
    "description": "Post-apocalyptic Gmail guardian that detects phishing using Gemini API. DONT BITE.",
    "version": "1.0",
    "permissions": [
      "scripting",
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://mail.google.com/*",
      "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "icons/icon16.png" 
    },
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["scripts/content.js"],
        "run_at": "document_idle"
      }
    ]

    
  }
  